# HungerExpress Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==================== DATABASE ====================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hungerexpress
DB_USERNAME=root
DB_PASSWORD=your_mysql_password_here

# ==================== JWT AUTHENTICATION ====================
# Generate a strong secret: openssl rand -base64 32
APP_JWT_SECRET=your_base64_encoded_secret_here
# Token expiry in milliseconds (default: 1 hour = 3600000)
APP_JWT_TTL_MS=3600000

# ==================== EMAIL SERVICE ====================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
MAIL_PASSWORD=your_app_password_here

# ==================== RAZORPAY PAYMENT GATEWAY ====================
# Get your keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ==================== ADMIN CONFIGURATION ====================
ADMIN_EMAIL=admin@hungerexpress.com
ADMIN_PASSWORD=your_secure_admin_password

# ==================== APPLICATION SETTINGS ====================
SERVER_PORT=8080
FRONTEND_URL=http://localhost:4200

# ==================== FILE UPLOAD ====================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5MB

# ==================== CORS ====================
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FILE=./logs/hungerexpress.log
